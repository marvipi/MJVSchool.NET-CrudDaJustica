@model HeroFormModel

@*
    Represents a form that reads information about a hero.
*@

<div>
	<div class="form-group">
		<label class="form-label" for="alias"> Alias: </label>
		<input class="form-control" type="text" name="Alias" value="@Model.Alias" />
	</div>

	<div class="form-group">
		<label class="form-label" for="debut"> Debut date: </label>
		<input class="form-control" type="date" name="Debut" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
	</div>

	<div class="form-group">
		<label class="form-label" for="firstName"> First name: </label>
		<input class="form-control" type="text" name="FirstName" value="@Model.FirstName" />
	</div>

	<div class="form-group">
		<label class="form-label" for="lastName"> Last name: </label>
		<input class="form-control" type="text" name="LastName" value="@Model.LastName" />
	</div>
</div>
@model (HeroFormModel heroFormModel, Guid idToUpdate)

@{
	ViewData["Title"] = "Update Hero";
}

<h1> @ViewData["Title"]  </h1>
<hr />

@if (ViewBag.Success ?? false)
{
	<p class="text-success"> Hero succesfully updated! </p>
} else
{
	<div class="text-danger">
		@Html.ValidationSummary()
	</div>
}

<form asp-action="Update" asp-route-id="@Model.idToUpdate" method="post">
	<partial name="_HeroForm" model="@Model.heroFormModel" />

	<br />

	<span>
		<a class="btn btn-dark" type="button" asp-action="RedirectToLastVisitedIndexPage"> Cancel </a>
		<button class="btn btn-primary" type="submit"> Update </button>
	</span>
</form>

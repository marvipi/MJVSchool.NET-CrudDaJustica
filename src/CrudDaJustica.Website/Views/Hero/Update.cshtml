@model (HeroFormModel heroFormModel, Guid idToUpdate)

@{
	ViewData["Title"] = "Update Hero";
}

<h1> @ViewData["Title"]  </h1>
<hr />

<form asp-controller="Hero" asp-action="Update" asp-route-id="@Model.idToUpdate" method="post">

	<div class="text-danger">
		@Html.ValidationSummary()
	</div>

	<partial name="_HeroForm" model="@Model.heroFormModel" />

	<br />

	<span>
		<a class="btn btn-outline-secondary" type="button" asp-controller="Hero" asp-action="Index"> Cancel </a>
		<button class="btn btn-outline-primary" type="submit"> Update </button>
	</span>
</form>
